<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Discoverticul" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_discoverticul</item>
        <item name="popupMenuStyle">@style/PopupMenu.Discoverticul</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Discoverticul</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Discoverticul</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Discoverticul</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Discoverticul</item>
        <item name="actionModeBackground">@drawable/cab_background_top_discoverticul</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_discoverticul</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Discoverticul</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>

    </style>



    <style name="ActionBar.Solid.Discoverticul" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_discoverticul</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_discoverticul</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_discoverticul</item>
        <item name="progressBarStyle">@style/ProgressBar.Discoverticul</item>
    </style>

    <style name="ActionBar.Transparent.Discoverticul" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_discoverticul</item>
        <item name="progressBarStyle">@style/ProgressBar.Discoverticul</item>
    </style>

    <style name="PopupMenu.Discoverticul" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_discoverticul</item>
    </style>

    <style name="DropDownListView.Discoverticul" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_discoverticul</item>
    </style>

    <style name="ActionBarTabStyle.Discoverticul" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_discoverticul</item>
    </style>

    <style name="DropDownNav.Discoverticul" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_discoverticul</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_discoverticul</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_discoverticul</item>
    </style>

    <style name="ProgressBar.Discoverticul" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_discoverticul</item>
    </style>

    <style name="ActionButton.CloseMode.Discoverticul" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_discoverticul</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Discoverticul.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Discoverticul</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Discoverticul</item>
    </style>

</resources>
