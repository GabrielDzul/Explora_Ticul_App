<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kokomusoft.exploraticul" >

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Discoverticul" >
        <activity
            android:name="com.kokomusoft.exploraticul.MainActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.ShoestoreListActivity"
            android:label="@string/title_shoestore_list" >
        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.ShoestoreDetailActivity"
            android:label="@string/title_shoestore_detail"
            android:parentActivityName="com.kokomusoft.exploraticul.ShoestoreListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kokomusoft.exploraticul.ShoestoreListActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.kokomusoft.exploraticul.HandCraftStoreListActivity"
            android:label="@string/title_handcraftstore_list" >
        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.HandCraftStoreDetailActivity"
            android:label="@string/title_handcraftstore_detail"
            android:parentActivityName="com.kokomusoft.exploraticul.HandCraftStoreListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kokomusoft.exploraticul.HandCraftStoreListActivity" />
        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.RestaurantListActivity"
            android:label="@string/title_restaurant_list" >
        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.RestaurantDetailActivity"
            android:label="@string/title_restaurant_detail"
            android:parentActivityName="com.kokomusoft.exploraticul.RestaurantListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kokomusoft.exploraticul.RestaurantListActivity" />
        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.HotelListActivity"
            android:label="@string/title_hotel_list" >
        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.HotelDetailActivity"
            android:label="@string/title_hotel_detail"
            android:parentActivityName="com.kokomusoft.exploraticul.HotelListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kokomusoft.exploraticul.HotelListActivity" />
        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name="com.kokomusoft.exploraticul.SplashScreen"
            android:label="@string/title_activity_splash_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
